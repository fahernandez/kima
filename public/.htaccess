<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    RewriteRule ^$ index.php?{%QUERY_STRING}&controller=index&action=index
    RewriteRule ^/?([a-zA-Z-_]+)$ index.php?{%QUERY_STRING}&controller=$1&action=index
    RewriteRule ^/?([a-zA-Z-_]+)/([a-zA-Z-_]+)$ index.php?{%QUERY_STRING}&controller=$1&action=$2
</IfModule>

<IfModule !mod_rewrite.c>
    ErrorDocument 404 /index.php
</IfModule>